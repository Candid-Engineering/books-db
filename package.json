{
  "name": "books-db",
  "version": "0.0.1",
  "description": "Use a barcode scanner to catalog your books!",
  "main": "./out/main/index.js",
  "author": "Candid Engineering",
  "homepage": "https://candid-eng.com",
  "packageManager": "pnpm@9.1.4",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm run js:test run && pnpm run rust:test && pnpm run e2e:test",
    "e2e:test": "pnpm wdio",
    "wdio": "wdio run ./e2e/wdio.conf.ts",
    "test:js": "pnpm js:test",
    "test:rust": "pnpm rust:test",
    "test:e2e": "pnpm e2e",
    "dev": "pnpm tauri dev",
    "db:drop": "cargo xtask db:drop",
    "gen:migration": "cargo xtask gen:migration",
    "build": "pnpm tauri build",
    "gen:schema": "cargo xtask gen:schema",
    "format": "pnpm rust:format && pnpm js:format",
    "js:format": "prettier --write .",
    "js:lint": "eslint .",
    "js:fix": "prettier --write . && eslint . --fix",
    "js:typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "js:test": "vitest",
    "rust:test": "cargo test --manifest-path src-tauri/Cargo.toml",
    "rust:cargo": "cargo --manifest-path src-tauri/Cargo.toml",
    "rust:format": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "svelte:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "svelte:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "svelte:dev": "vite dev",
    "svelte:build": "vite build",
    "svelte:preview": "vite preview",
    "storybook": "pnpm storybook:dev",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.1.1",
    "@tauri-apps/plugin-fs": "^2.0.2",
    "better-sqlite3": "^11.5.0",
    "bulma": "^1.0.2",
    "drizzle-orm": "^0.36.3",
    "onscan.js": "^1.5.2",
    "open-library-api": "^0.1.2",
    "openapi-fetch": "^0.12.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@storybook/addon-essentials": "8.4.4",
    "@storybook/addon-interactions": "8.4.4",
    "@storybook/addon-links": "8.3.3",
    "@storybook/addon-svelte-csf": "5.0.0-next.11",
    "@storybook/blocks": "8.3.3",
    "@storybook/html": "8.3.3",
    "@storybook/svelte": "8.3.3",
    "@storybook/svelte-vite": "8.4.4",
    "@storybook/sveltekit": "8.4.4",
    "@storybook/test": "8.4.4",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@tauri-apps/cli": "^2.1.0",
    "@testing-library/webdriverio": "^3.2.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/onscan.js": "^1.5.6",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@wdio/cli": "^9.2.14",
    "@wdio/globals": "^9.2.14",
    "@wdio/local-runner": "^9.2.15",
    "@wdio/mocha-framework": "^9.2.8",
    "@wdio/spec-reporter": "^9.2.14",
    "appdata-path": "^1.0.0",
    "drizzle-kit": "^0.27.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.10.2",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "msw": "^2.6.4",
    "picocolors": "^1.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "sql.js": "^1.12.0",
    "storybook": "8.4.4",
    "svelte": "^5.2.0",
    "svelte-check": "^4.0.8",
    "tree-kill": "^1.2.2",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "type": "module"
}
