{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "include": [
    // "src/renderer/src/env.d.ts",
    // "src/renderer/src/**/*",
    // "src/renderer/src/**/*.svelte",
    "renderer/env.d.ts",
    "renderer/**/*",
    "renderer/**/*.svelte",
    "preload/*.d.ts"
, "renderer/lib", "renderer/state", "renderer/main.ts"  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "strict": true,
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "checkJs": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
