{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "include": [
    "src-ui/env.d.ts",
    "src-ui/**/*",
    "src-ui/**/*.svelte",
    "preload/*.d.ts",
    "src-ui/lib",
    "src-ui/state",
    "src-ui/main.ts"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "strict": true,
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "checkJs": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
